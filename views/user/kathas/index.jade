extends ../../../views/layout

block content
	.paddStyle
		#scrollToTop
			h1.text-center.logo.logo-font.fontHead Katha a day
			.row.tableFrame
				if kathas
					.col-md-12
							table.table.table-striped.table-bordered.table-hover.table-condensed
								thead
									tr
										th Shabad
										th Download  
										th Ang 
										th Place   
										th Date Added
								tbody
									each katha,i in kathas
										tr
											td #{katha.shabad_p} <br/>
												| #{katha.shabad_h} <br/>
												| #{katha.shabad_pe} <br/>
												| #{katha.meaning_e} <br/>
											td #[a(href="#{katha.download_link}") link]
											td #{katha.ang}   
											td #{katha.place}   
											td #{katha.date}
				else
					p.nokathas No content to display.